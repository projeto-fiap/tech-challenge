<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2" author="gabriel.oliveira">
        <createTable tableName="payment">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="paymentDate" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="paymentMethod" type="varchar(255)"/>
        </createTable>
        <createTable tableName="order">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_date" type="timestamp"/>
            <column name="payment_id" type="bigint">
                <constraints foreignKeyName="fk_payment_id" references="payment(id)"/>
            </column>
        </createTable>

        <createTable tableName="item">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="quantity" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="item_category" type="varchar(255)"/>
            <column name="unit" type="varchar(255)"/>
            <column name="fk_order" type="bigint"/>
            <column name="item_ingredient" type="bigint">
                <constraints foreignKeyName="fk_ingredient" references="item(id)"/>
            </column>
        </createTable>
        <createTable tableName="item_ingredients">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="item_entity_id" type="bigint">
                <constraints foreignKeyName="fk_item_entity_id" references="item(id)"/>
            </column>
            <column name="ingredients_id" type="bigint">
                <constraints foreignKeyName="fk_ingredients_id" references="item(id)"/>
            </column>
        </createTable>
</changeSet>
<changeSet id="4" author="gabriel.oliveira" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <addForeignKeyConstraint baseTableName="item" baseColumnNames="fk_order" constraintName="fk_order" referencedTableName="order"
                             referencedColumnNames="id"/>
</changeSet>
</databaseChangeLog>