<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="gabriel.oliveira">
        <!-- Criação da tabela de pagamento -->
        <createTable tableName="payment">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="payment_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="payment_method" type="varchar(255)"/>
        </createTable>

        <!-- Criação da tabela de pedido -->
        <createTable tableName="order">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_date" type="timestamp"/>
            <column name="payment_id" type="bigint"/>
        </createTable>

        <!-- Criação da tabela de item -->
        <createTable tableName="item">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="unit" type="varchar(255)"/>
            <column name="item_category" type="varchar(255)"/>
            <column name="order_id" type="bigint"/>
        </createTable>

        <!-- Criação da tabela de ingredientes -->
        <createTable tableName="ingredient_item">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="image_url" type="varchar(255)"/>
            <column name="price" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Criação da tabela de relacionamento entre item e ingrediente -->
        <createTable tableName="item_ingredients">
            <column name="item_id" type="bigint"/>
            <column name="ingredient_id" type="bigint"/>
        </createTable>

        <!-- Adicionando constraints de chave estrangeira e chave primária -->
        <addForeignKeyConstraint
                baseTableName="order"
                baseColumnNames="payment_id"
                constraintName="fk_payment_id"
                referencedTableName="payment"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="item"
                baseColumnNames="order_id"
                constraintName="fk_order_id"
                referencedTableName="order"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="item_ingredients"
                baseColumnNames="item_id"
                constraintName="fk_item_id"
                referencedTableName="item"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="item_ingredients"
                baseColumnNames="ingredient_id"
                constraintName="fk_ingredient_id"
                referencedTableName="ingredient_item"
                referencedColumnNames="id"/>

        <addPrimaryKey
                tableName="item_ingredients"
                columnNames="item_id, ingredient_id"
                constraintName="pk_item_ingredients"/>
    </changeSet>

    <changeSet id="2" author="gabriel.oliveira">
        <!-- Inserir dados iniciais em payment -->
        <insert tableName="payment">
            <column name="payment_date" valueDate="2024-07-19T10:00:00"/>
            <column name="amount" value="100.00"/>
            <column name="currency" value="USD"/>
            <column name="payment_method" value="Credit Card"/>
        </insert>

        <!-- Inserir dados iniciais em order -->
        <insert tableName="order">
            <column name="status" value="Pending"/>
            <column name="created_date" valueDate="2024-07-19T10:00:00"/>
            <column name="updated_date" valueDate="2024-07-19T10:00:00"/>
            <column name="payment_id" valueNumeric="1"/>
        </insert>
    </changeSet>
</databaseChangeLog>
